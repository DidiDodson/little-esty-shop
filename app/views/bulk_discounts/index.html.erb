<h4>Upcoming holidays: <% NagerService.us_holidays.each do |holiday| %>
  <%= holiday %>,
<% end %></h4>

<h1>Bulk Discounts for <%= "#{@merchant.name}" %></h1>

<div id="bulk-discount">
  <% @merchant.bulk_discounts.each do |discount| %>
    <div id="bulk-discount-<%= discount.id %>">
      <%= link_to "Discount #{discount.id}", merchant_bulk_discount_path(@merchant, discount)%>
      Quantity Threshold: <%= discount.quantity_threshold %><br>
      Percentage: <%= number_to_percentage(discount.percentage, precision: 0) %>
      <%= link_to "Delete Discount", merchant_bulk_discount_path(@merchant, discount), method: :delete%>
      <hr>
    </div>
  <% end %>

  <%= link_to "Create Discount", new_merchant_bulk_discount_path(@merchant)%>
</div>
