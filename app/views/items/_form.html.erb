<%= form_with model: [@merchant, @item], local: true do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name, required: true %><br>
    <%= form.label :description %>
    <%= form.text_area :description, required: true %><br>
    <%= form.label :unit_price %>
    <%= form.number_field :unit_price, required: true %><br>
    <%= form.submit %>
<% end %>